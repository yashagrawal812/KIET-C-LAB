#include<stdio.h>
int main()
 {
 	int normal,copy=0,reverse=0;
 	printf("enter the number = ");
 	scanf("%d",&normal);
 	copy+=normal;
 	while(copy!=0)
	 {
 	   reverse=reverse+(copy%10);
 	   reverse=reverse*10;
	   copy=copy/10;		
	 }
	 reverse=reverse/10;
	 printf("reverse = %d",reverse);
	 if(normal==reverse)
	  {
	  	printf("\nthe number is palindrome");
	  }
	 else
	    {
	   printf("\nnumber is not palindrome"); 
	    }
	 return 0;
 }
