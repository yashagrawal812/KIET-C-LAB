#include<stdio.h>
 	int num1,num2,choice,result=0;
    	int addition(int x,int y)
    	 {
    	 	 result=x+y;
    	 	 return result;
		 
		 }
	     int subtraction(int x,int y)
    	 {
    	 	 result=x-y;
    	 	 return result;
		 }
         int multiplication(int x,int y)
    	 {
    	 	 result=x*y;
    	 	 return result;
		 }
		 int division(int x,int y)
    	 {
    	 	 result=x/y;
    	 	 return result;
		 } 
	int main()
	 {
	 	printf("enter the values for result = ");
	 	scanf("%d%d",&num1,&num2);
		printf("1.addition .\n");
	   	printf("2.subtraction .\n"); 
	   	printf("3.multiplication .\n"); 
		printf("4.division .\n");
	    printf("enter your choice = ");
	    scanf("%d",&choice);
	    switch(choice)
	       {
	       	case 1:result=addition(num1,num2);
	       	       printf("result of addition %d & %d = %d",num1,num2,result);
	       	       break;
	       
	       	case 2:result=subtraction(num1,num2);
	       	       printf("result of subtraction %d & %d = %d",num1,num2,result);
	       	       break;	       
	       
	       	case 3:result=multiplication(num1,num2);
	       	       printf("result of multiplication %d & %d = %d",num1,num2,result);
	       	       break;	       \
	       
	       	case 4:result=division(num1,num2);
	       	       printf("result of division %d & %d = %d",num1,num2,result);
	       	       break;	       
	       	default:printf("wrong choice!\n");       
		   }
		return 0;   
	 }	 
